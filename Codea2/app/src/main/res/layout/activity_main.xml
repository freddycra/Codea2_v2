<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jugar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/Jugar"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:padding="16dp"
        android:text="JUGAR"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/puntajes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/puntajes"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/Puntaje"
        android:drawableLeft="@android:drawable/ic_menu_gallery"
        android:padding="16dp"
        android:text="PUNTAJES"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/cuenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jugar" />

    <Button
        android:id="@+id/cuenta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/Mi_Cuenta"
        android:drawableLeft="@android:drawable/ic_menu_manage"
        android:padding="16dp"
        android:text="MI CUENTA"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/mispreguntas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puntajes" />

    <Button
        android:id="@+id/mispreguntas"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/Preguntas"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:padding="16dp"
        android:text="MIS PREGUNTAS"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cuenta" />

    <Button
        android:id="@+id/video"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/Video"
        android:drawableLeft="@android:drawable/ic_menu_slideshow"
        android:padding="16dp"
        android:text="VIDEO EXPLICATIVO"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mispreguntas" />

    <ImageView
        android:id="@+id/logout"
        android:layout_width="35dp"
        android:layout_height="66dp"
        app:srcCompat="@drawable/logout"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />
</android.support.constraint.ConstraintLayout>